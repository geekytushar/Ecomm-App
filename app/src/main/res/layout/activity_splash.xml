<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/logo_img_width"
        android:layout_height="@dimen/logo_img_height"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/logo_text_margin_top"
        android:text="@string/splash_app_name"
        android:textColor="@color/splash_app_name"
        android:textSize="@dimen/splash_app_text" />
</LinearLayout>